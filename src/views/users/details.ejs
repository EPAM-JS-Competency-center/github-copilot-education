<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
    <link rel="stylesheet" href="/css/style.css">
    <script defer src="/js/main.js"></script>
    <script>
        // Accessibility: allow Enter/Space to activate back link
        const handleKey = (event) => {
            if (event.key === 'Enter' || event.key === ' ') {
                window.location.href = '/users';
            }
        };
    </script>
</head>
<body>
    <%- include('../partials/header.ejs') %>

    <div class="page-surface">
        <section class="card" aria-labelledby="user-profile-title">
            <% if (user) { %>
                <h1 id="user-profile-title">User Profile</h1>
                <div class="field">
                    <span class="muted"><strong>Name:</strong></span>
                    <span> <%= user.name %></span>
                </div>
                <div class="field">
                    <span class="muted"><strong>Email:</strong></span>
                    <span> <%= user.email %></span>
                </div>
                <div class="actions">
                    <a href="/users" class="btn btn-primary" role="button" aria-label="Back to list" tabindex="0" onkeydown="handleKey(event)">Back</a>
                </div>
            <% } else { %>
                <h1 id="user-profile-title">User not found</h1>
                <% if (message) { %>
                    <p><%= message %></p>
                <% } %>
                <div class="actions">
                    <a href="/users" class="btn btn-primary" role="button" aria-label="Back to list" tabindex="0" onkeydown="handleKey(event)">Back</a>
                </div>
            <% } %>
        </section>
    </div>

    <%- include('../partials/footer.ejs') %>
</body>
</html>

